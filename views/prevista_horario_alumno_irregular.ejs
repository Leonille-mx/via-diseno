<%- include('includes/_nav_alumno.ejs') %>

<main class="bg-grey mx-2 mx-md-4 mb-3 p-3 p-md-4" style="border-radius: 1.5rem;">
  <div class="row gx-2 gx-md-3 mt-2 mt-md-4 align-items-center">
    <div class="col-12 col-md-6 col-lg-2 mb-3 mb-lg-0 ms-lg-4">
      <div class="card rounded-5 ivd-bg-red bg-gradient text-white h-100">
        <div class="card-body px-0 text-start">
          <div class="d-flex align-items-center justify-content-between">
            <p class="card-title ms-3">Clases Inscritas</p>
          </div>
          <div style="border-bottom: 3px solid #ffffff; width: 100%; margin-top: -7px;"></div>
          <p class="card-text text-start ms-4" style="margin-top: 10px; font-size: calc(1rem + 1vw);"> <%= materias_inscritas %> </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-2 mb-3 mb-lg-0">
      <div class="card rounded-5 ivd-bg-white bg-gradient text-black h-100">
        <div class="card-body px-0 text-start">
          <div class="d-flex align-items-center justify-content-between">
            <p class="card-title ms-3">Clases Obligatorias</p>
          </div>
          <div style="border-bottom: 3px solid #84251c98; width: 100%; margin-top: -7px;"></div>
          <p class="card-text text-start ms-4" style="margin-top: 10px; font-size: calc(1rem + 1vw);"> <%= obligatoriasTotales %> </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-12 col-lg-3 offset-lg-3 mt-3 mt-lg-0">
      <div class="card rounded-5 bg-transparent ivd-text-red border border-2 border-grey h-100">
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-2 p-md-3">
          <h2 class="card-title mb-2" style="font-size: calc(1.2rem + 0.8vw);">Vista previa del horario</h2>
          <p class="text-black text-center mb-2" style="font-size: 0.9rem; line-height: 1.3;">
            Cambios elaborados son presentados con el color rojo.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row gx-2 gx-md-3 mt-3">
    <div class="col-12 col-lg-5 mb-3 mb-lg-0">
      <div class="card rounded-5 bg-transparent border border-2 border-grey text-black h-100">
        <div class="card-body p-0 dashboard-scroll" style="max-height: 50vh;">
          <div class="px-2 px-md-3 pt-2" style="overflow-x: hidden; overflow-y: auto;">
            <h5 class="card-title ms-2 ms-md-3">Materias Seleccionadas: </h5>
            
            <% for (let materia_resultado of materias_resultado) { %>
              <div class="w-100 d-flex flex-column rounded-5 mt-2" style="background-color: white;">
                <div class="p-2">
                  <div class="d-flex flex-column flex-md-row justify-content-center align-items-center mb-1">
                    <p class="m-0 me-md-3 text-center text-md-start">
                      <%= materia_resultado.hora_inicio %> - <%= materia_resultado.hora_fin %>
                    </p>
                    <p class="m-0 ivd-text-red text-center text-md-start">
                      (<%= materia_resultado.dias.join(', ') %>)
                    </p>
                  </div>
                </div>
                
                <div class="ivd-bg-red w-100" style="height: 3px;"></div>
                
                <div class="p-2 p-md-3">
                  <h5 class="card-title fw-semibold text-center text-md-start"><%= materia_resultado.materia_nombre %></h5>
                  <p class="card-text text-center text-md-start mb-1">
                    Salon:
                    <% if (materia_resultado.salon_numero === 9999) { %>
                      No asignado | 
                    <% } else { %>
                      <%= materia_resultado.salon_numero %> | 
                    <% } %>
                    <%= materia_resultado.profesor_nombre %> 
                    <%= materia_resultado.profesor_primer_apellido %>
                    <%= materia_resultado.profesor_segundo_apellido %>
                  </p>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    
    <div class="col-lg-7">
      <div class="card rounded-5 bg-transparent border-grey text-black h-100">
        <div class="card-header bg-transparent border-0 p-0">
          <div class="px-3 pt-3">
            <div class="d-flex align-items-center justify-content-center overflow-hidden rounded-4 ">
              <table class="table p-0 table-custom-striped table-hover mb-0 "
                style="font-size: 0.85rem; border-collapse: separate !important; border-spacing: 0; border-radius: 1rem;">
                <thead class="ivd-bg-red">
                  <tr class="text-center text-white">
                    <!-- Titulo de columnas -->
                    <th class="hour-col">Hora</th>
                    <th>Lunes</th>
                    <th>Martes</th>
                    <th>Miércoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                  </tr>
                </thead>
                <tbody>
                  <%
                  <!-- Colores de bloques -->
                  const colores = ['bg-primary-subtle', 'bg-success-subtle ','bg-warning-subtle ','bg-danger-subtle','bg-info-subtle','bg-secondary-subtle','bg-light'];
                  const materiasColor = {};
                  let colorIndex = 0;
                  
                  <!-- Inicializa estructura de horario -->
                  const horario = { 
                    Lunes: {}, Martes: {}, Miércoles: {}, Jueves: {}, Viernes: {} 
                  };
                  
                  <!--  Procesa las materia de resultado para construir el horario-->
                  if (typeof materias_resultado !== 'undefined' && Array.isArray(materias_resultado)) {
                    materias_resultado.forEach(materia => {
                      // Asignar color único por materia
                      if (!materiasColor[materia.materia_nombre]) {
                        materiasColor[materia.materia_nombre] = colores[colorIndex % colores.length];
                        colorIndex++;
                      }
                      
                      <!-- Procesa el dia de la materia -->
                      materia.dias.forEach(dia => {
                        const diaNombre = dia.charAt(0).toUpperCase() + dia.slice(1).toLowerCase();
                        
                        <!-- Bloques de 30 min -->
                        const [hi, mi] = materia.hora_inicio.split(':').map(Number);
                        const [hf, mf] = materia.hora_fin.split(':').map(Number);
                        
                        const inicioBloque = hi * 2 + (mi >= 30 ? 1 : 0);
                        const finBloque = hf * 2 + (mf >= 30 ? 1 : 0);
                        
                        <!-- Si el dia es valido -->
                        if (horario[diaNombre]) {
                          horario[diaNombre][inicioBloque] = {
                            rowspan: finBloque - inicioBloque,
                            nombre: materia.materia_nombre,
                            color: materiasColor[materia.materia_nombre],
                            salon: materia.salon_numero,
                            profesor: `${materia.profesor_nombre} ${materia.profesor_primer_apellido}`,
                            hora: `${materia.hora_inicio} - ${materia.hora_fin}`
                          };
                          
                          <!-- Bloques intermedios como ocupados -->
                          for (let b = inicioBloque + 1; b < finBloque; b++) {
                            horario[diaNombre][b] = 'ocupar';
                          }
                        }
                      });
                    });
                  }
                  
                  <!-- Filas de la tabla -->
                  for (let bloque = 14; bloque <= 32; bloque++) {
                    const hora = Math.floor(bloque / 2);
                    const minutos = bloque % 2 === 0 ? '00' : '30';
                    const horaFormato = `${hora}:${minutos}`;
                  %>
                    <tr>
                      <th class="hour-cell text-center align-middle"><%= horaFormato %></th>
                      <% ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes'].forEach(dia => { %>
                        <% if (horario[dia][bloque] === 'ocupar') return; %>
                        <% if (horario[dia][bloque]) { 
                          const clase = horario[dia][bloque];
                        %>
                          <td class="text-black text-center align-middle <%= clase.color %>" 
                              rowspan="<%= clase.rowspan %>"
                              data-bs-toggle="tooltip" 
                              data-bs-placement="top" 
                              title="<%= clase.hora %> | Salon: <%= clase.salon %> | Prof: <%= clase.profesor %>">
                            <%= clase.nombre %>
                          </td>
                        <% } else { %>
                          <td class="empty-slot"></td>
                        <% } %>
                      <% }) %>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="card-footer d-flex justify-content-center" style="background-color: #f0f0f0; border-bottom-left-radius: 1.5rem; border-bottom-right-radius: 1.5rem;">
            <button type="button" class="btn btn-secondary rounded-pill px-4 mx-4" onclick="window.location.href='/alumno-irregular/ayuda';"
                          style="background-color: white; border: 1px solid #84251C; color: #84251C;">Modificar
                          </button>
                          <button type="button" class="btn btn-danger rounded-pill px-4 mx-4"
                            onclick="window.location.href='/alumno-irregular/resultado-de-horario';"
                            style="background-color: #84251C; border: none;">Confirmar</button>
                    </div>
                  </div>
                </div>
              </div>
          </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>