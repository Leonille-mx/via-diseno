<%- include('includes/_nav_alumno.ejs') %>

  <main class="bg-grey mx-4 mb-3 p-4" style="height: 500vh; border-radius: 1.5rem;">
    <div class="row gx-3 mt-4 align-items-center">
      <div class="col-md-2">
        <div class="card rounded-5 ivd-bg-red bg-gradient text-white h-100">
          <div class="card-body px-0 text-start">
            <div class="d-flex align-items-center justify-content-between">
              <p class="card-title ms-3">Clases AÃ±adidas</p>
            </div>
            <div style="border-bottom: 3px solid #ffffff; width: 100%; margin-top: -7px;"></div>
            <p class="card-text text-start ms-4" style="margin-top: 10px; font-size: 2rem;">2</p>
          </div>
        </div>
      </div>

      <div class="col-md-2">
        <div class="card rounded-5 ivd-bg-white bg-gradient text-black h-100">
          <div class="card-body px-0 text-start">
            <div class="d-flex align-items-center justify-content-between">
              <p class="card-title ms-3">Clases Obligatorias</p>
            </div>
            <div style="border-bottom: 3px solid #84251c98; width: 100%; margin-top: -7px;"></div>
            <p class="card-text text-start ms-4" style="margin-top: 10px; font-size: 2rem;">1</p>
          </div>
        </div>
      </div>

      <div class="col-md-3 offset-md-3"> 
        <div class="card rounded-5 bg-grey ivd-text-red border border-2 border-grey h-100 mx-auto" style="max-width: 400px;">
          <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-3">
            <h2 class="card-title mb-2">Vista previa del horario</h2>
            <p class="text-black m-0">
              Cambios elaborados son presentados con el color rojo.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="row gx-3 mt-3">
      <div class="col-lg-5">
        <div class="card rounded-5 bg-grey border border-2 border-grey text-black h-100">
          <div class="card-body p-3 overflow-auto" style="max-height: 60vh;">
            <h5 class="card-title ms-3">Materias Seleccionadas: </h5>
            <% for (let materia_resultado of materias_resultado) { %>
              <div class="card rounded-5 border-0 border-bottom ivd-border-red mb-2">
                <div class="card-body p-3">
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center">
                      <p class="m-0 me-3">
                        <%= materia_resultado.hora_inicio %> - <%= materia_resultado.hora_fin %>
                      </p>
                      <p class="m-0 ivd-text-red">(<%= materia_resultado.dias.join(', ') %>)</p>
                  </div>
                </div>
                <h5 class="card-title fw-semibold"><%= materia_resultado.materia_nombre %></h5>
                <p class="card-text">
                  Salon <%= materia_resultado.salon_numero %> | 
                  <%= materia_resultado.profesor_nombre %> 
                  <%= materia_resultado.profesor_primer_apellido %>
                  <%= materia_resultado.profesor_segundo_apellido %>
                </p>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="col-lg-7">
      <div class="card rounded-5 ivd-bg-white bg-gradient text-black h-100">
        <div class="card-header bg-transparent border-0 p-0">
          <div class="px-3 pt-3">
            <div class="d-flex align-items-center justify-content-center">
              <p class="card-title m-0 w-100 text-center">[HORARIO ALUMNO]</p>
            </div>
          </div>
        </div>
        <div class="card-body">
          <canvas id="NA" height="300"></canvas>
          <div class="card-footer d-flex justify-content-center" style="background-color: #f0f0f0; border-bottom-left-radius: 1.5rem; border-bottom-right-radius: 1.5rem;">
            <button type="button" class="btn btn-secondary rounded-pill px-4 mx-4" style="background-color: white; border: 1px solid #84251C; color: #84251C;">Cancelar</button>
            <button type="button" class="btn btn-danger rounded-pill px-4 mx-4" style="background-color: #84251C; border: none;">Confirmar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>