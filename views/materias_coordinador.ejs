<!-- Modal de confirmación para eliminar materia-->
<div class="modal fade" id="eliminarMateriaModal" tabindex="-1" aria-labelledby="eliminarMateriaModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content rounded-5" style="max-width: 95vw;">
      
      <!-- Encabezado del modal -->
      <div class="modal-header justify-content-center" style="background-color: #f0f0f0">
        <h5 class="modal-title" id="eliminarMateriaModalLabel" style="color: #84251C;"><b>Estas eliminando una materia</b></h5>
      </div>
      
      <!-- Cuerpo del modal con los detalles del salón a eliminar -->
      <div class="modal-body" style="max-height: 60vh; overflow-y: auto;">
        <div class="table-responsive">
          <table class="table table-bordered m-0">
            <thead class="table-light">
              <tr>
                <th style="min-width: 80px;" class="text-center align-middle">ID</th>
                <th style="min-width: 80px;" class="text-center align-middle">Nombre</th>
                <th style="min-width: 90px;" class="text-center align-middle">Creditos</th>
                <th style="min-width: 90px;" class="text-center align-middle">Semestre</th>
                <th style="min-width: 90px;" class="text-center align-middle">Tipo de salon</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td id="modalMateriaID" class="text-center align-middle"></td>
                <td id="modalNombre" class="text-center align-middle"></td>
                <td id="modalCreditos" class="text-center align-middle"></td>
                <td id="modalSemestrePlan" class="text-center align-middle"></td>
                <td id="modalTipoSalon" class="text-center align-middle"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- Pie del modal con botones de acción -->
      <div class="modal-footer justify-content-center" style="background-color: #f0f0f0">
        <button type="button" class="btn btn-secondary rounded-pill px-4 mx-4" style="background-color: white; border: 1px solid #84251C; color: #84251C;" data-bs-dismiss="modal">Cancelar</button>
        <form id="eliminarForm" method="POST" action="">
          <button type="submit" class="btn btn-danger rounded-pill px-4 mx-4" style="background-color: #84251C; border: none;">Eliminar</button>
        </form>
      </div>

    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/coordinador.js"></script>
  <% if (msg) { %>
    <script>
      // Solo cuando el html carga completamente
      document.addEventListener('DOMContentLoaded', () => {
        // Crea una instancia de nuevo modal
        var myModal = new bootstrap.Modal(document.getElementById('msgModal'));
        // Muestra el nuevo modal
        myModal.show();
      });
    </script>
  <% } %>
  <script>
    document.getElementById('eliminarMateriaModal').addEventListener('show.bs.modal', function(event) {
    const button = event.relatedTarget;
    const materiaId = button.getAttribute('data-materia-id');
    const materiaNombre = button.getAttribute('data-materia-nombre');
    const materiaCreditos = button.getAttribute('data-materia-creditos');
    const materiaSemestrePlan = button.getAttribute('data-semestre-plan');
    const materiaTipoSalon = button.getAttribute('data-materia-tipo-salon');
    const semestreID = button.getAttribute('data-semestre-id');  

    // Actualizar contenido del modal
    document.getElementById('modalMateriaID').textContent = materiaId;
    document.getElementById('modalNombre').textContent = materiaNombre;
    document.getElementById('modalCreditos').textContent = materiaCreditos;
    document.getElementById('modalSemestrePlan').textContent = materiaSemestrePlan;
    document.getElementById('modalTipoSalon').textContent = materiaTipoSalon;

    // Actualizar acción del formulario
    
    document.getElementById('eliminarForm').action = `/coordinador/materia_semestre/eliminar/${materiaId}/${semestreID}`;
});
  </script>

  <script>
    const selectedMaterias = new Set();

    document.querySelectorAll('[data-bs-toggle="modal"][data-semestre]').forEach(btn => {
        btn.addEventListener('click', function() {
            const semestreId = this.dataset.semestre;
            document.getElementById('modalSemestreId').value = semestreId;

            document.querySelectorAll('#materiasTabla tbody .materia-row').forEach(row => {
              row.style.display = 'none';
            });

            document.querySelectorAll(`#materiasTabla tbody .materia-row[data-semestre="${semestreId}"]`).forEach(row => {
              row.style.display = '';
            });
        });
    });
  
    function moverFila(materiaId, haciaSeleccionadas) {
      const tablaOrigen = haciaSeleccionadas ? document.querySelector('#materiasTabla tbody') : document.querySelector('#selectedMateriasTabla tbody');
      const tablaDestino = haciaSeleccionadas ? document.querySelector('#selectedMateriasTabla tbody') : document.querySelector('#materiasTabla tbody');
      
      const fila = tablaOrigen.querySelector(`tr[data-materia-id="${materiaId}"]`);
      if (!fila) return;
  
      const btn = fila.querySelector('.abrir-materia-btn');
      const icon = btn.querySelector('svg');
      if (haciaSeleccionadas) {
        btn.style.backgroundColor = '#84251c';
        icon.innerHTML = `<path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>`;
      } else {
        btn.style.backgroundColor = '#84251c';
        icon.innerHTML = `<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>`;
      }
  
      tablaDestino.appendChild(fila);
    }
  
    document.querySelectorAll('.abrir-materia-btn').forEach(btn => {
      btn.addEventListener('click', function () {
        const materiaId = this.dataset.materiaId;
  
        if (selectedMaterias.has(materiaId)) {
          selectedMaterias.delete(materiaId);
          moverFila(materiaId, false);
        } else {
          selectedMaterias.add(materiaId);
          moverFila(materiaId, true);
        }
      });
    });
  
    document.querySelectorAll('#materiasTabla tbody tr').forEach(tr => {
      const materiaId = tr.querySelector('.abrir-materia-btn').dataset.materiaId;
      tr.setAttribute('data-materia-id', materiaId);
    });
  
    document.getElementById('scheduleForm').addEventListener('submit', async function (e) {
      e.preventDefault();
  
      const semestreId = document.getElementById('modalSemestreId').value;
      const materias = Array.from(selectedMaterias);
  
      if (materias.length === 0) {
        alert('No se han seleccionado materias para abrir');
        return;
      }
  
      try {
        const response = await fetch('/coordinador/materias/abrir', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ semestre_id: semestreId, materias })
        });
  
        if (response.ok) {
          window.location.href = '/coordinador/materias?msg=Materias abiertas exitosamente';
        } else {
          throw new Error('Error del servidor');
        }
      } catch (error) {
        console.error('Error:', error);
        window.location.href = '/coordinador/materias?msg=Error al abrir materias';
      }
    });
  </script>
  
</body>
</html>