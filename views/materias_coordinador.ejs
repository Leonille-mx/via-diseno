<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/coordinador.js"></script>
  <% if (msg) { %>
    <script>
      // Solo cuando el html carga completamente
      document.addEventListener('DOMContentLoaded', () => {
        // Crea una instancia de nuevo modal
        var myModal = new bootstrap.Modal(document.getElementById('msgModal'));
        // Muestra el nuevo modal
        myModal.show();
      });
    </script>
  <% } %>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const checkboxes = document.querySelectorAll('.carrera-checkbox');

      async function actualizarMaterias() {
        // 1) Leer carreras seleccionadas
        const seleccionadas = Array.from(checkboxes)
          .filter(cb => cb.checked)
          .map(cb => parseInt(cb.value));

        try {
          // 2) Traer la estructura completa por semestre
          const res = await fetch('/coordinador/materias/filtradas');
          const { materiasPorSemestre } = await res.json();

          // 3) Para cada semestre s1…s9 limpia y rellena el tbody correspondiente
          for (let i = 1; i <= 9; i++) {
            const tbody = document.getElementById(`tbody${i}`);
            if (!tbody) continue;
            tbody.innerHTML = ''; // limpiar

            const key = `s${i}`;
            const lista = materiasPorSemestre[key] || [];

            // 4) Filtrar por carrera y agregar filas
            lista
              .filter(m => seleccionadas.includes(m.carrera_id))
              .forEach(materia => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                  <th scope="row" class="text-center align-middle">${materia.sep_id}</th>
                  <td class="text-center align-middle">${materia.nombre}</td>
                  <td class="text-center align-middle">${materia.carrera_nombre}</td>
                  <td class="text-center align-middle">${materia.creditos}</td>
                  <td class="text-center align-middle">${materia.semestre_plan}</td>
                  <td class="text-center align-middle">${materia.horas_profesor}</td>
                  <td class="text-center align-middle">${materia.tipo_salon || 'null'}</td>
                  <td class="text-center align-middle">
                    <button class="btn btn-sm p-0 d-flex align-items-center justify-content-center"
                            style="width:1.5rem;height:1.5rem;border-radius:50%;background-color:#84251c;color:white;border:none;"
                            data-bs-toggle="modal"
                            data-bs-target="#eliminarMateriaModal"
                            data-materia-id="${materia.materia_id}"
                            data-sep-id="${materia.sep_id}"
                            data-semestre-plan="${materia.semestre_plan}"
                            data-semestre-id="${materia.semestre_id}"
                            data-materia-nombre="${materia.nombre}"
                            data-materia-creditos="${materia.creditos}"
                            data-materia-tipo-salon="${materia.tipo_salon}">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                          class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147
                                a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146
                                a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147
                                a.5.5 0 0 1-.708-.708L7.293 8z"/>
                      </svg>
                    </button>
                  </td>
                `;
                tbody.appendChild(tr);
              });
          }
        } catch (err) {
          console.error('Error al cargar materias filtradas:', err);
        }
      }

      // 5) Asignar evento a cada checkbox
      checkboxes.forEach(cb => cb.addEventListener('change', actualizarMaterias));
    });

    document.getElementById('eliminarMateriaModal').addEventListener('show.bs.modal', function(event) {
    const button = event.relatedTarget;
    const materiaId = button.getAttribute('data-materia-id');
    const sepId = button.getAttribute('data-sep-id');
    const materiaNombre = button.getAttribute('data-materia-nombre');
    const materiaCreditos = button.getAttribute('data-materia-creditos');
    const materiaSemestrePlan = button.getAttribute('data-semestre-plan');
    const materiaTipoSalon = button.getAttribute('data-materia-tipo-salon');
    const semestreID = button.getAttribute('data-semestre-id');  

    // Actualizar contenido del modal
    document.getElementById('modalSepID').textContent = sepId;
    document.getElementById('modalNombre').textContent = materiaNombre;
    document.getElementById('modalCreditos').textContent = materiaCreditos;
    document.getElementById('modalSemestrePlan').textContent = materiaSemestrePlan;
    document.getElementById('modalTipoSalon').textContent = materiaTipoSalon;

    // Actualizar acción del formulario
    
    document.getElementById('eliminarForm').action = `/coordinador/materia_semestre/eliminar/${materiaId}/${semestreID}`;
    });
  </script>
  <script>
    const selectedSet = new Set();
    const availableSet = new Set();
    const originalSet = new Set();
    let currentSemestre = null;
    let materiasMap = {};

    const semestreNombres = {
      s1: '1er Semestre', s2: '2do Semestre', s3: '3er Semestre',
      s4: '4to Semestre', s5: '5to Semestre', s6: '6to Semestre',
      s7: '7mo Semestre', s8: '8vo Semestre', s9: '9no Semestre'
    };

    const materiasPorSemestre = <%- JSON.stringify(materiasPorSemestre) %>;
    const materiasNoAbiertasPorSemestre = <%- JSON.stringify(materiasNoAbiertasPorSemestre) %>;

    function iconoMas() {
      return `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
              </svg>`;
    }

    function iconoX() {
      return `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
              </svg>`;
    }

    function generarFilaMateria(m, esSeleccionada) {
      const tr = document.createElement('tr');
      tr.setAttribute('data-materia-id', m.materia_id);

      tr.innerHTML = `
        <td class="text-center align-middle">${m.nombre}</td>
        <td class="text-center align-middle">${m.sep_id}</td>
        <td class="text-center align-middle">${m.carrera_nombre}</td>
        <td class="text-center align-middle">${m.semestre_plan}</td>
        <td class="text-center align-middle">${m.tipo_salon}</td>
        <td class="text-center align-middle">
          <button type="button" class="btn btn-sm p-0 d-flex align-items-center justify-content-center abrir-materia-btn" 
          style="width: 1.5rem; height: 1.5rem; border-radius: 50%; background-color: #84251c; color: white; border: none;" data-id="${m.materia_id}">
            ${esSeleccionada ? iconoX() : iconoMas()}
          </button>
        </td>
      `;

      tr.querySelector(".abrir-materia-btn").addEventListener("click", () => {
        const id = m.materia_id.toString();
        if (esSeleccionada) {
          selectedSet.delete(id);
          availableSet.add(id);
        } else {
          availableSet.delete(id);
          selectedSet.add(id);
        }
        renderTablas();
      });

      return tr;
    }

    function renderTablas() {
      const selectedBody = document.querySelector("#selectedMateriasTabla tbody");
      const availableBody = document.querySelector("#materiasTabla tbody");
      selectedBody.innerHTML = "";
      availableBody.innerHTML = "";

      for (let id of selectedSet) {
        const m = materiasMap[id];
        selectedBody.appendChild(generarFilaMateria(m, true));
      }

      for (let id of availableSet) {
        const m = materiasMap[id];
        availableBody.appendChild(generarFilaMateria(m, false));
      }
    }

    document.querySelectorAll("[data-bs-toggle='modal'][data-semestre]").forEach(btn => {
      btn.addEventListener("click", () => {
        currentSemestre = btn.dataset.semestre;

        const seleccionadas = Array
          .from(document.querySelectorAll('.carrera-checkbox'))
          .filter(cb => cb.checked)
          .map(cb => parseInt(cb.value, 10));

        let materiasAbiertas = (materiasPorSemestre[currentSemestre] || []).filter(m => seleccionadas.includes(m.carrera_id));
        let materiasDisponibles = (materiasNoAbiertasPorSemestre[currentSemestre] || []).filter(m => seleccionadas.includes(m.carrera_id));

        selectedSet.clear();
        availableSet.clear();
        originalSet.clear();
        materiasMap = {};

        materiasAbiertas.forEach(m => {
          const id = m.materia_id.toString();
          selectedSet.add(id);
          originalSet.add(id);
          materiasMap[id] = m;
        });

        materiasDisponibles.forEach(m => {
          const id = m.materia_id.toString();
          availableSet.add(id);
          materiasMap[id] = m;
        });

        document.getElementById("modalSemestreId").value = currentSemestre;
        document.getElementById("semestreTxtModal").textContent = semestreNombres[currentSemestre] || currentSemestre;

        renderTablas();
      });
    });

    document.getElementById("scheduleForm").addEventListener("submit", function (e) {
      e.preventDefault();
      const materiasInsertar = [...selectedSet].filter(id => !originalSet.has(id));
      const materiasEliminar = [...originalSet].filter(id => !selectedSet.has(id));

      if (materiasInsertar.length === 0 && materiasEliminar.length === 0) {
        window.location.href = "/coordinador/materias?msg=No hay cambios que guardar.";
        return;
      }

      fetch("/coordinador/materias/abrir", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ semestre_id: currentSemestre, materiasInsertar, materiasEliminar })
      })
      .then(res => {
        if (res.ok) {
          location.href = "/coordinador/materias?msg=Materias abiertas exitosamente&msgTitle=Abrir Materias";
        } else {
          alert("Error al guardar cambios");
        }
      });
    });
    // Buscador
    document.getElementById("buscarMateria").addEventListener("keyup", function () {
      const searchValue = this.value.toLowerCase().trim();
      const filas = document.querySelectorAll("#materiasTabla tbody tr");

      filas.forEach(fila => {
        const textoFila = fila.textContent.toLowerCase();
        fila.style.display = textoFila.includes(searchValue) ? "" : "none";
      });
    });
  </script>

  
</body>
