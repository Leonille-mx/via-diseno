<%- include('includes/_nav_coordinador.ejs') %>
<%- include('includes/_header_coordinador.ejs') %>

        <main class="bg-grey flex-grow-1 rounded-5 p-4">
          <h1>Salones</h1>
          <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-light">
                  <th scope="col">ID</th>
                  <th scope="col">Capacidad</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Nota</th>
                  <th scope="col">Campus</th>
                </thead>
                <tbody>
                  <% for (let salon of salones) { %>
                    <tr>
                      <th scope="row"><%= salon.salon_id %></th>
                      <td><%= salon.capacidad %></td>
                      <td><%= salon.tipo %></td>
                      <td><%= salon.nota %></td>
                      <td><%= salon.nombre %></td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
        </main>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/coordinador.js"></script>
  </body>
</html>