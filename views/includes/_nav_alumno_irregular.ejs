    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/alumno.css">
</head>
<body class="d-flex flex-column m-0 p-0 vh-100" style="font-family: 'Lato', sans-serif;">
    <nav class="navbar navbar-expand-lg bg-grey mx-2 my-2" style="height: auto; border-radius: 1.5rem;">   
        <div class="container-fluid">
            <a class="navbar-brand a-logo me-5" href="/alumno-irregular/modificar-horario">
                <img class="logo-size rounded-3" src="/images/logo.png" alt="Una imagen del logo de via diseño">
            </a> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse fs-6" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-lg-0 ul-nav">
                    <li class="nav-item li-nav">
                        <a class="nav-link active" href="/alumno-irregular/modificar-horario" ariia-current="true">Horario </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/alumno-irregular/ayuda">Ayuda</a>
                    </li>
                </ul>
                <div class="navbar-nav d-p-nav me-5">
                    <p class="m-0">
                        <strong class="text-center"><%= usuario?.nombre || 'Nombre no disponible' %></strong>
                        <span>&nbsp|&nbsp</span>
                        <span class="text-center"><%= usuario?.correo || 'Correo no disponible' %></span>
                        <form action="/usuario/cerrar-sesion" method="POST" style="display: inline;">
                            <button type="submit" style="background: none; border: none; padding: 0;">
                                <img class="ms-2 me-3 img-exit" 
                                     src="/images/box-arrow-right.svg" 
                                     alt="Un logo para salir de la sesión">
                            </button>
                        </form>
                    </p>
                </div>
            </div>
        </div>        
    </nav>